<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- property placeholder post-processor -->
	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="config.properties" />
	</bean>


	<!-- location of the classes for the mutants -->
	<bean id="classesDir" class="java.io.File">
		<constructor-arg>
			<value>${classesDir}</value>
		</constructor-arg>
	</bean>

	<!-- location of the unit tests -->
	<bean id="testClassesDir" class="java.io.File">
		<constructor-arg>
			<value>${testClassesDir}</value>
		</constructor-arg>
	</bean>

	<bean id="sourceDir" class="java.io.File">
		<constructor-arg>
			<value>${sourceDir}</value>
		</constructor-arg>
	</bean>

	<bean id="mutantSourceDir" class="java.io.File">
		<constructor-arg>
			<value>${mutantSourceDir}</value>
		</constructor-arg>
	</bean>



	<bean id="eventLogger" class="mut.log.FileEventLogger">
		<constructor-arg>
			<value>mutDriver.log</value>
		</constructor-arg>
	</bean>

	<bean id="testDriver" class="mut.driver.MutationTestDriver">
		<property name="logger" ref="eventLogger" />
		<property name="mutantGenerator" ref="mutantGenerator" />
		<property name="reportGenerator" ref="reportGenerator" />
		<property name="operators">
			<set>
				<value>ROR</value>
			</set>
		</property>

		<property name="testExecuter" ref="testExecuter" />
		<property name="testsCreator" ref="testsCreater" />


	</bean>

	<bean id="testsCreater" class="mut.driver.OnePerClassTestCreator">
		<property name="logger" ref="eventLogger" />
		<property name="classesBaseDir" ref="classesDir" />
		<property name="testClassesBaseDir" ref="testClassesDir" />
		<property name="testCaseSuffix" value="${testCaseSuffix}" />
	</bean>

	<bean id="testExecuter" class="mut.executer.JUnitExecuter">
		<property name="logger" ref="eventLogger" />

		<property name="testClassesLocationsAsFiles">
			<list>
				<ref bean="classesDir" />
				<ref bean="testClassesDir" />
			</list>
		</property>
	</bean>

	<bean id="reportGenerator" class="mut.report.XMLReportGenerator" init-method="init" destroy-method="destroy">
		<property name="reportSurvivorsOnly"
			value="${report.reportSurvivorsOnly}" />
		<property name="sourceCreator" ref="mutantSourceCreator" />
		<property name="out">
			<bean class="java.io.PrintStream">
				<constructor-arg>
					<value>${report.filename}</value>
				</constructor-arg>
			</bean>
		</property>
	</bean>

	<bean id="mutantSourceCreator"
		class="mut.report.MutantSourceCreator">
		<property name="sourceBaseDir" ref="sourceDir" />
		<property name="mutantOutputDir" ref="mutantSourceDir" />
	</bean>
	<bean id="mutantGenerator"
		class="mut.mutantgen.asm.ASMMutantCreator">
		<constructor-arg ref="classesDir" />

	</bean>

</beans>