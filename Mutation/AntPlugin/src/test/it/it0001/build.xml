<project name="SampleProjectUnderTest" default="carmatest" basedir=".">

	<target name="carmatest" description="Use the Task" >
		<taskdef name="carmatest" classname="com.retroduction.carma.ant.AntCarmaTest"/>
		<carmatest classesDir="target/classes/" testClassesDir="target/test-classes/" reportFile="target/report.xml" dependencyClassPathUrls=""/>
	</target>
	
	<target name="carmareport" description="Use the Task" >
		<taskdef name="carmareport" classname="com.retroduction.carma.ant.AntCarmaReport"/>
		<carmareport sourceDir="src/main/java" reportFile="target/report.xml" outputDirectory="target/carmareport/" />
	</target>
</project>