<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans >
	<!-- property placeholder post-processor -->
	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="config.properties" />
	</bean>

	<!-- location of the classes for the mutants -->
	<bean id="classesDir" class="java.io.File">
		<constructor-arg>
			<value>${classesDir}</value>
		</constructor-arg>
	</bean>

	<!-- location of the unit tests -->
	<bean id="testClassesDir" class="java.io.File">
		<constructor-arg>
			<value>${testClassesDir}</value>
		</constructor-arg>
	</bean>

	<bean id="sourceDir" class="java.io.File">
		<constructor-arg>
			<value>${sourceDir}</value>
		</constructor-arg>
	</bean>

	<bean id="mutantSourceDir" class="java.io.File">
		<constructor-arg>
			<value>${mutantSourceDir}</value>
		</constructor-arg>
	</bean>

	<!--  set of operators considered for tests -->

	<bean id="operators"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass">
			<value>com.mutation.EMutationOperator</value>
		</property>
		<property name="targetMethod">
			<value>getFromCsvList</value>
		</property>
		<property name="arguments">
			<value>ROR</value>
		</property>
	</bean>

	<!-- the driver main class which executes the tests -->
	<bean id="testDriver" class="com.mutation.Driver">
		<property name="testRunner" ref="testRunner" />
		<property name="classSetResolver" ref="classUnderTestResolver" />
		<property name="testSetResolver" ref="testSetResolver" />
		<property name="eventListener" ref="eventListener" />
		<property name="mutantGenerator" ref="mutantGenerator" />
	</bean>

	<bean id="file.eventListener" class="com.mutation.events.listener.FileEventListener" destroy-method="destroy" >
		<constructor-arg><value>${log.filename}</value></constructor-arg>
	</bean>
	<bean id="eventListener" class="com.mutation.events.listener.ConsoleEventListener" >
	</bean>

	<bean id="testRunner" class="com.mutation.testrunner.JUnitRunner">
		<property name="stopOnFirstFailedTest" value="true" />
		<property name="testClassesLocationsAsFiles">
			<list>
				<ref bean="classesDir" />
				<ref bean="testClassesDir" />
			</list>
		</property>
	</bean>

	<bean id="classUnderTestResolver"
		class="com.mutation.classesresolver.DirectoryBasedResolver">
		<property name="classesBaseDir" ref="classesDir" />
	</bean>

	<bean id="testSetResolver"
		class="com.mutation.testsetresolver.OneTestPerClassResolver">
		<property name="testCaseSuffix" value="${testCaseSuffix}" />
	</bean>

	<bean id="bcel.mutantGenerator" class="com.mutation.transform.bcel.MutantGenerator">
	</bean>

	<bean id="mutantGenerator" class="com.mutation.transform.asm.MutantGenerator">
		<property name="originalClassPath" ref="classesDir"></property>
	</bean>

</beans>