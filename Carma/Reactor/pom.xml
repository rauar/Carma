<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
  http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>com.retroduction.carma</groupId>
		<artifactId>MetaDefinition</artifactId>
		<version>0.2</version>
		<relativePath>../MetaDefinition/pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.retroduction.carma</groupId>
	<artifactId>Reactor</artifactId>
	<packaging>pom</packaging>
	<name>Retroduction Carma Reactor Project</name>

	<modules>
		<module>../Core</module>
		<module>../ReportGenerator</module>
		<module>../MavenPlugin</module>
		<module>../JavaApplication</module>
		<module>../Annotations</module>
		<module>../AntPlugin</module>
		<module>../Integration</module>
	</modules>
	
	<dependencies>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>MavenPlugin</artifactId>
			<version>0.2</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>JavaApplication</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>Core</artifactId>
			<version>${version}</version>
		</dependency> 
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>Annotations</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>EventListeners</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>AntPlugin</artifactId>
			<version>${version}</version>
		</dependency>
		<dependency>
			<groupId>com.retroduction.carma</groupId>
			<artifactId>Integration</artifactId>
			<version>${version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/src.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
          			<execution>
						<phase>package</phase>				
			          	<goals>
				      		<goal>attached</goal>
				    	</goals>					
					</execution>
				</executions>          
			</plugin>
		</plugins>
	</build>
</project>
